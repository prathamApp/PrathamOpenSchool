<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pef.prathamopenschool.CrlPullPushTransferUsageScreen">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:background="@color/solid_background"
        android:drawableLeft="@drawable/icon"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:text=" Pull / Push / Transfer Usage Operations "
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/push"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pushDataToServer"
        android:layout_toStartOf="@+id/pushDataToServer"
        android:background="@color/button"
        android:gravity="center"
        android:onClick="transferData"
        android:text="@string/transferUsage"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/pushDataToServer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@color/button"
        android:onClick="goToPushData"
        android:text="@string/PushServer"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/pull"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pushDataToServer"
        android:layout_gravity="center"
        android:layout_toEndOf="@+id/pushDataToServer"
        android:background="@color/button"
        android:onClick="pullData"
        android:text="@string/pull"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pushDataToServer"
        android:layout_centerHorizontal="true"
        android:layout_margin="32dp"
        android:textColor="@color/button"
        android:textSize="24sp" />


</RelativeLayout>
