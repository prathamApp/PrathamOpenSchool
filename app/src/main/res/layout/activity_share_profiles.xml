<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pef.prathamopenschool.ShareProfiles">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/solid_background"
        android:drawableLeft="@drawable/icon"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:text="Share Profiles"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btn_ShareStudentProfiles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_margin="64dp"
        android:background="@color/button"
        android:text="  Share Profiles  "
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/Linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_ShareStudentProfiles"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_studentsShared"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center_horizontal"
            android:text="Students Shared"
            android:textColor="@color/button"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_crlsShared"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center_horizontal"
            android:text="CRLs Shared"
            android:textColor="@color/button"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_groupssShared"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center_horizontal"
            android:text="Groups Shared"
            android:textColor="@color/button"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Linear"
        android:layout_centerHorizontal="true"
        android:layout_margin="32dp"
        android:text="NOTE : Please select &quot;ShareIt&quot; app for Sharing !!!"
        android:textAllCaps="false"
        android:textColor="@color/button"
        android:textSize="22sp"
        android:textStyle="bold" />
</RelativeLayout>
