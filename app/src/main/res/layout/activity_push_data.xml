<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pef.prathamopenschool.PushData">


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@color/solid_background"
        android:drawableLeft="@drawable/icon"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:text=" Push Data To Server "
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/Line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_pushReceivedData"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:background="@color/button"
            android:onClick="pushToServer"
            android:padding="8dp"
            android:text="  Push Received Data  "
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_pushSelfData"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="32dp"
            android:background="@color/button"
            android:onClick="pushSelfData"
            android:padding="8dp"
            android:text="  Push Self Data  "
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_pushedFiles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Line1"
        android:layout_margin="32dp"
        android:gravity="center"
        android:textColor="@color/button"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>
